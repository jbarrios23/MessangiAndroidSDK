<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ScrollViewCount"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_title_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="@string/title"
            android:textSize="15sp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_get_location"
            android:layout_alignLeft="@+id/textView_title_map"
            android:background="@drawable/ic_launcher_background"
            android:src="@android:drawable/ic_menu_mylocation"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_get_location_c"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/button_get_location"
            android:background="@drawable/ic_launcher_background"
            android:src="@android:drawable/ic_menu_mylocation"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_get_permission"
            android:layout_alignRight="@+id/textView_title_map"
            android:background="@drawable/ic_launcher_background"
            android:src="@android:drawable/ic_menu_manage"
            />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />
</LinearLayout>



