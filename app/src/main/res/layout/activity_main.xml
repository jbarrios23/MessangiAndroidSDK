<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/greyColor"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:progress="25"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <Switch
        android:id="@+id/simpleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/greyColor"
        android:visibility="gone"
        android:checked="true"
        android:drawableStart="@android:drawable/ic_menu_view"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:gravity="center" />


    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greyColor"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/device"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/greyColor"
            android:drawableStart="@android:drawable/ic_menu_directions"
            android:drawableLeft="@android:drawable/ic_menu_directions"
            android:text="Device"
            android:textColor="@color/whiteColor"
            android:textSize="11sp" />

        <Button
            android:id="@+id/user"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/greyColor"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:text="User"
            android:textColor="@color/whiteColor"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tag"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/greyColor"
            android:drawableStart="@android:drawable/ic_menu_today"
            android:drawableLeft="@android:drawable/ic_menu_today"
            android:text="Tags"
            android:textColor="@color/whiteColor"
            android:textSize="12sp" />


        <Button
            android:id="@+id/save"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/greyColor"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="Save"
            android:textColor="@color/whiteColor"
            android:textSize="12sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greyColor"
        android:gravity="center"
        android:lines="2"
        android:text="@string/device_info"
        android:textColor="@color/whiteColor"
        app:layout_constraintTop_toBottomOf="@id/botones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/lista_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_two"
        tools:listitem="@layout/item_device" />

    <TextView
        android:id="@+id/textView_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greyColor"
        android:gravity="center"
        android:lines="2"
        android:text="@string/user_device_info"
        android:textColor="@color/whiteColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lista_user"
        app:layout_constraintTop_toBottomOf="@id/lista_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/lista_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_two"
        tools:listitem="@layout/item_device" />


</androidx.constraintlayout.widget.ConstraintLayout>


